
//QUESTAO 3
INICIO
	INTEIRO: DIVIDENDO, DIVISOR, QUOCIENTE;
	LEIA(DIVIDENDO, DIVISOR);
	QUOCIENTE <- 0;
	ENQUANTO (DIVIDENDO >= DIVISOR) FAÇA
		DIVIDENDO <- DIVIDENDO - DIVISOR;
		QUOCIENTE <- QUOCIENTE + 1;
	FIMENQUANTO;
	ESCREVA(QUOCIENTE);
FIM.



//QUESTAO 4

INICIO
	INTEIRO: BASE, EXPOENTE, RESULTADO, I;
	LEIA(BASE, EXPOENTE);
	RESULTADO <- BASE;
	SE EXPOENTE = 0
		ENTAO
			RESULTADO <- 1;
		SENAO
			SE EXPOENTE = 1
				ENTAO
					RESULTADO -< BASE;
				SENAO
					PARA I DE 1 ATÉ (EXPOENTE-1) FAÇA
						RESULTADO = RESULTADO * BASE;
					FIMPARA;
	FIMSE;

	ESCREVA(RESULTADO);
FIM.


//QUESTAO 5

INICIO
	INTEIRO: T1, T2, AUX, I;
	LEIA(T1, T2);
	AUX <- 0
	PARA I DE 1 ATÉ 20 FAÇA
		ESCREVA(T1);
		AUX <- T1 + T2;
		T1 <- T2;
		T2 <- AUX;
	FIMPARA;
FIM.


























